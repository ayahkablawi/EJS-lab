<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Full Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <h1>Full Menu</h1>

  <h2>Mains</h2>
  <% menu.forEach(item => { if (item.category === 'mains') { %>
    <h3><%= item.name %> <% if (item.rating === 5) { %> ⭐ <% } %></h3>
    <p>$<%= item.price.toFixed(2) %></p>
    <p><%= item.details %></p>
  <% } }); %>

  <h2>Desserts</h2>
  <% menu.forEach(item => { if (item.category === 'desserts') { %>
    <h3><%= item.name %> <% if (item.rating === 5) { %> ⭐ <% } %></h3>
    <p>$<%= item.price.toFixed(2) %></p>
    <p><%= item.details %></p>
  <% } }); %>

  <h2>Sides</h2>
  <% menu.forEach(item => { if (item.category === 'sides') { %>
    <h3><%= item.name %> <% if (item.rating === 5) { %> ⭐ <% } %></h3>
    <p>$<%= item.price.toFixed(2) %></p>
    <p><%= item.details %></p>
  <% } }); %>
</body>
</html>
